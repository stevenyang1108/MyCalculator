<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:background="@android:color/holo_blue_bright">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/expArea"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:gravity="center_vertical|right"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/ansArea"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:textStyle="italic"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_blue_dark">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/seven"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="7"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/eight"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="8"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/nine"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="9"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/four"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="4"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/five"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="5"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/six"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="6"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/one"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/two"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/three"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/point"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="."/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/zero"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="btnPressed"
                    android:tag="0"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/equal"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="@dimen/abc_text_size_display_1_material"
                    android:onClick="computAction"
                    android:tag="="/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@android:color/holo_blue_light">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Del"
                android:id="@+id/del"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:onClick="backSpace"
                android:tag="d"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/divide"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:onClick="computAction"
                android:tag="/"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/times"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:onClick="computAction"
                android:tag="*"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/sub"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:onClick="computAction"
                android:tag="-"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/add"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_light"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:onClick="computAction"
                android:tag="+"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
